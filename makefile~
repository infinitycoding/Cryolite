
LDFLAGS = -ldl -lSDL -lGL -lGLU -lSDL_image -lSDL_ttf -lSDL_mixer -lalut -lopenal -llua 
INC = -I ../include -I ../include/game -I ../include/render -I ../include/util -I /usr/include/SDL
CFLAGS = -std=gnu++0x
CC = g++

export LDFLAGS
export INC
export CFLAGS
export CC
export LD


Cryolite:
	@$(MAKE) -C engine

all: Cryolite
	@$(MAKE) -C game


Debug: all

Release:
	@export CFLAGS+="-O3"
	@$(MAKE) -C engine
	@$(MAKE) -C game
	
clean:
	@$(MAKE) -C engine clean
	@$(MAKE) -C game clean

launch:
	./game/game
